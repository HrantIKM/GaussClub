@model University

@{
	ViewData["Title"] = "Create University";
}

<section class="contact_section layout_padding-bottom">
	<div class="container mt-5">
		<nav aria-label="breadcrumb" class="main-breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Գլխավոր</a></li>
				<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Համալսարաններ</a></li>
				<li class="breadcrumb-item active" aria-current="page">Ստեղծել նոր համալսարան</li>
			</ol>
		</nav>
		<div class="row">
			<div class="col-md-8 col-lg-6 mx-auto">
				<div class="form_container">
					<form method="post" class="border-1">
						<div class="form-group">
							<label asp-for="Name">Համալսարանի անունը</label>
							<input asp-for="Name" class="form-control" placeholder="Համալսարանի անունը" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-group check-box-group">
							<label asp-for="IsActive">Ակտիվ է</label>
							<input asp-for="IsActive" class="form-control" />
							<span asp-validation-for="IsActive" class="text-danger"></span>
						</div>
						<div class="btn_box mt-2">
							<button type="submit">
								ՍՏԵՂԾԵԼ
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts{
	<partial name="_ValidationScriptsPartial">
}
