@{
	ViewData["Title"] = "Գլխավոր";
}
@*Start of slider*@
@section header
{
	<section class="slider_section ">
		<div id="customCarousel1" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<div class="container ">
						<div class="row">
							<div class="col-md-6">
								<div class="detail-box">
									<h1>
										Բարի գալուստ «GΛU<b>SS</b>»<br>
										ինտելեկտուալ հարթակ
									</h1>
									<p>
										Գրանցե՛ք ձեր թիմը և մասնակցեք առաջնություններին։
									</p>
									<div class="btn-box">
										@Html.ActionLink("Մուտք", "Index", "Login", null, new { @class = "btn-1" })
										@Html.ActionLink("Գրանցվել", "Index", "Register", null, new { @class = "btn-2" })
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="row">
									<div class=" col-lg-10 mx-auto">
										<div class="img-box">
											<img src="~/images/slider-img1.png" alt="">
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="carousel-item">
					<div class="container ">
						<div class="row">
							<div class="col-md-6">
								<div class="detail-box">
									<h1>
										Ինտելեկտուալ խաղերի <br>
										մասին առաջին հարթակը ՀՀ-ում
									</h1>
									<p>
										Առաջինն իմացեք Հայաստանում տեղի ունեցող ինտելեկտուալ խաղերի մասին։
									</p>

									<div class="btn-box">
										@Html.ActionLink("Մուտք", "Index", "Login", null, new { @class = "btn-1" })
										@Html.ActionLink("Գրանցվել", "Index", "Register", null, new { @class = "btn-2" })
									</div>

								</div>
							</div>
							<div class="col-md-6">
								<div class="row">
									<div class=" col-lg-10 mx-auto">
										<div class="img-box">
											<img src="~/images/slider-img2.png" alt="">
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="carousel-item">
					<div class="container ">
						<div class="row">
							<div class="col-md-6">
								<div class="detail-box">
									<h1>
										«Ի՞նչ, որտե՞ղ, ե՞րբ»-ի <br>
										առաջնություններ
									</h1>
									<p>
										Մասնակցե՛ք թիմով կամ անհատապես, գրանցեք հաջողություններ և ստացեք թիմերին միանալու առաջարկներ։
									</p>

									<div class="btn-box">
										@Html.ActionLink("Մուտք", "Index", "Login", null, new { @class = "btn-1" })
										@Html.ActionLink("Գրանցվել", "Index", "Register", null, new { @class = "btn-2" })
									</div>

								</div>
							</div>
							<div class="col-md-6">
								<div class="row">
									<div class=" col-lg-10 mx-auto">
										<div class="img-box">
											<img src="~/images/slider-img3.png" alt="">
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="carousel_btn-box">
				<a class="carousel-control-prev" href="#customCarousel1" role="button" data-slide="prev">
					<i class="fa fa-angle-left" aria-hidden="true"></i>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#customCarousel1" role="button" data-slide="next">
					<i class="fa fa-angle-right" aria-hidden="true"></i>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</section>
}
<!-- service section -->
@*End of slider*@
<section class="service_section layout_padding">
	<div class="container">
		<div class="heading_container heading_center">
			<h2>
				Մենք խաղում ենք
			</h2>
		</div>
	</div>
	<div class="container ">
		<div class="row">
			<div class="col-md-6 col-lg-4">
				<div class="box ">
					<div class="img-box">
						<img src="~/images/im1.png" />
					</div>
					<div class="detail-box">
						<h4>
							Ի՞նչ, որտե՞ղ, ե՞րբ
						</h4>
						<p>
							Հայերեն և ռուսերեն սպորտային առաջնություններ։ Օնլայն խաղեր։ Մասնակցե՛ք առաջնություններին, որոնց միաժամանակ մասնակցում են տարբեր երկրներից ու քաղաքներից։
						</p>
					</div>
				</div>
			</div>
			<div class="col-md-6 col-lg-4">
				<div class="box ">
					<div class="img-box">
						<img src="~/images/im2.png" />
					</div>
					<div class="detail-box">
						<h4>
							Թեմատիկ քուիզներ
						</h4>
						<p>
							Դիտո՞ւմ եք ամենատարբեր ֆիլմեր ու սերիալներ։ MARVEL-ի կամ Հարրի Փոթերի երկրպագո՞ւ եք։ Փորձե՛ք ձեր ուժերը ամենատարբեր թեմատիկ քուիզներում։
						</p>
					</div>
				</div>
			</div>
			<div class="col-md-6 col-lg-4 ">
				<div class="box ">
					<div class="img-box">
						<img src="~/images/im3.png" />
					</div>
					<div class="detail-box">
						<h4>
							Ամենախելացին
						</h4>
						<p>
							Բոլորիս ծանոթ ու սիրելի խաղին այժմ կարող եք մասնակցել նաև դուք։ Գրանցվե՛ք խաղին անհատապես ու մրցեք ձեր թիմակիցների ու մյուս խաղացողների հետ։
						</p>
					</div>
				</div>
			</div>
			<div class="col-md-6 col-lg-4">
				<div class="box ">
					<div class="img-box">
						<img src="~/images/im4.png" />
					</div>
					<div class="detail-box">
						<h4>
							Բրեյն ռինգ
						</h4>
						<p>
							Հնարավորինս արագ փորձեք գտնել հարցերի ճիշտ պատասխանները և միգուցե կատարեք նոկաուտ «Բրեյն Ռինգ»-ում։
						</p>
					</div>
				</div>
			</div>
			<div class="col-md-6 col-lg-4">
				<div class="box ">
					<div class="img-box">
						<img src="~/images/im5.png" />

					</div>
					<div class="detail-box">
						<h4>
							Գուշակիր մեղեդին
						</h4>
						<p>
							Ձեզ համարո՞ւմ եք մելոման։ Հետևո՞ւմ եք տարբեր երաժշտական մրցույթներին կամ ուղղակի շատ լավ գիտեք ամենատարբեր երգեր, ապա ճիշտ տեղում եք։
						</p>
					</div>
				</div>
			</div>
			<div class="col-md-6 col-lg-4">
				<div class="box ">
					<div class="img-box">
						<img src="~/images/im6.png" />

					</div>
					<div class="detail-box">
						<h4>
							Своя Игра
						</h4>
						<p>
							Թիմային այս խաղում հնարավորություն ունեք միանգամից իրարից տարբեր մի քանի ոլորտներում մրցելու ձեր գիտելիքներով այլ թիմերի հետ։
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- end service section -->
<!-- about section -->

