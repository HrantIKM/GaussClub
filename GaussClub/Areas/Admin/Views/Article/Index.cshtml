@model IEnumerable<Article>

<div class="pagetitle">
	<h1>Հրապարակումներ</h1>
	<nav class="mt-1">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Վահանակ</a></li>
			<li class="breadcrumb-item active">Հրապարակումներ</li>
		</ol>
	</nav>
</div><!-- End Page Title -->

<section class="section university-table">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="row add-item-btn">
					<div>
						<a asp-action="Create" class="btn btn-success d-flex"><i class="material-icons mr-1">&#xE147;</i> <span>Ստեղծել նոր հրապարակում</span></a>
					</div>
				</div>
				<div class="card-body">
					<!-- Table with stripped rows -->
					<table class="table-striped border-lightgray-solid table datatable">
						<thead>
							<tr>
								<th scope="col">ID</th>
								<th scope="col">Վերնագիր</th>
								<th scope="col">Slug</th>
								<th scope="col">Հեղինակ</th>
								<th scope="col">Վիճակ</th>
								<th scope="col">Ստեղծվել է</th>
								<th scope="col">Թարմացվել է</th>
								<th data-sortable="false" scope="col">Գործողություններ</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var article in Model)
							{

								<tr>
									<th scope="row">@article.Id</th>
									<td>@article.Title</td>
									<td>@article.Slug</td>
									<td>@article.Author</td>
									<td class="text-white"><span class="badge bg-@(article.IsActive ? "success" : "danger")">@(article.IsActive ? "Ակտիվ է" : "Ակտիվ չէ")</span></td>
									<td>@article.CreatedAt?.ToString("d")</td>
									<td>@article.UpdatedAt?.ToString("d")</td>
									<td>
										<a asp-controller="Article" asp-action="Edit" asp-route-id=@article.Id class="edit text-primary"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
										<button data-id="@article.Id" class="empty-btn text-danger deleteArticleModalBtn" data-bs-toggle="modal" data-bs-target="#deleteArticleModal">
											<i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
										</button>
									</td>
								</tr>
							}
						</tbody>
					</table>
					<!-- End Table with stripped rows -->
				</div>
			</div>
		</div>
	</div>
</section>

<partial name="_DeleteModal" />

@section scripts {
	<script src="~/js/Areas/Admin/articles/delete.js"></script>
}