@model ArticleVM

<section class="contact_section layout_padding-bottom">
	<div class="container mt-5">
		<nav aria-label="breadcrumb" class="main-breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Գլխավոր</a></li>
				<li class="breadcrumb-item"><a asp-controller="Article" asp-action="Index">Հրապարակումներ</a></li>
				<li class="breadcrumb-item active" aria-current="page">Ստեղծել նոր հրապարակում</li>
			</ol>
		</nav>
		<div class="card">
			<div class="card-body pt-20">
				<!-- Floating Labels Form -->
				<form class="row g-3 align-items-center" method="post" enctype="multipart/form-data" onsubmit="handleSubmit()">
					<div class="col-md-6">
						<div class="form-floating">
							<input asp-for="Article.Title" class="form-control" placeholder="Վերնագիր">
							<label asp-for="Article.Title">Վերնագիր</label>
							<span asp-validation-for="Article.Title" class="text-danger"></span>
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-floating">
							<input asp-for="Article.Slug" class="form-control" placeholder="Slug">
							<label asp-for="Article.Slug">Slug</label>
							<span asp-validation-for="Article.Slug" class="text-danger"></span>
						</div>
					</div>

					<div class="col-md-12">
						<div class="form-floating">
							<textarea asp-for="Article.Content" class="form-control" placeholder="Բովանդակություն"></textarea>
							<span asp-validation-for="Article.Content" class="text-danger"></span>
						</div>
					</div>

					<div class="col-md-9">
						<div class="form-floating">
							<input asp-for="Article.Author" class="form-control" placeholder="Հեղինակ">
							<label asp-for="Article.Author">Հեղինակ</label>
							<span asp-validation-for="Article.Author" class="text-danger"></span>
						</div>
					</div>

					<div class="col-md-3">
						<div class="form-floating">
							<div class="form-check form-switch">
								<input asp-for="Article.IsActive" class="form-check-input" type="checkbox">
								<label asp-for="Article.IsActive" class="form-check-label">Կարգավիճակ</label>
							</div>
						</div>
					</div>

					<div class="col-md-12 d-flex align-items-center">
						<label class="col-sm-2 col-form-label w-100">Թեգեր</label>
						<div class="col-sm-10  w-100 labels-multiselect-container">
							<select class="labels-multiselect" asp-for="LabelIds" asp-items="@ViewBag.LabelList">
							</select>
						</div>
					</div>


					<div class="col-md-12">
						<div class="form-floating">
							<input type="file" name="file" id="file" class="form-control file-input" accept="image/*">
							<label for="file">Նկար</label>
						</div>
					</div>

					<div class="text-center">
						<button type="submit" class="btn btn-primary">Պահպանել</button>
						<button type="reset" class="btn btn-secondary">Վերականգնել</button>
					</div>
				</form>
				<!-- End floating Labels Form -->
			</div>
		</div>
	</div>
</section>

@section Scripts{
	<script src="~/js/Areas/Admin/articles/slug-generator.js"></script>
	<script src="~/js/Areas/Admin/articles/common.js"></script>
	<script src="~/js/Areas/Admin/main/ckeditor.js"></script>
	<partial name="_ValidationScriptsPartial">
}
