@model University

@{
	ViewData["Title"] = "Create University";
}

<section class="contact_section layout_padding-bottom">
	<div class="container mt-5">
		<nav aria-label="breadcrumb" class="main-breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Գլխավոր</a></li>
				<li class="breadcrumb-item"><a asp-controller="University" asp-action="Index">Համալսարաններ</a></li>
				<li class="breadcrumb-item active" aria-current="page">Ստեղծել նոր համալսարան</li>
			</ol>
		</nav>
		<div class="card">
			<div class="card-body pt-20">
				<!-- Floating Labels Form -->
				<form class="row g-3 align-items-center" method="post">
					<div>
						<div class="form-floating">
							<input asp-for="Name" class="form-control" placeholder="Համալսարանի անունը">
							<label asp-for="Name">Համալսարանի անունը</label>
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					</div>

					<div class="text-center">
						<button type="submit" class="btn btn-primary">Պահպանել</button>
						<button type="reset" class="btn btn-secondary">Վերականգնել</button>
					</div>
				</form>
				<!-- End floating Labels Form -->
			</div>
		</div>
	</div>
</section>

@section Scripts{
	<partial name="_ValidationScriptsPartial">
}